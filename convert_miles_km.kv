BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 50
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                font_size: 25
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 25
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert m to km'
        font_size: 25
        on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 50
        text: '54.71756'
        color: (1, 1, 0, 1)